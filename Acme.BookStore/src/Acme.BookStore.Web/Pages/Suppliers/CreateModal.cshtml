@page
@using Acme.BookStore.Localization
@using Acme.BookStore.Web.Pages.Suppliers
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateModalModel
@inject IStringLocalizer<BookStoreResource> L
@{
    Layout = null;
}
<form asp-page="/Suppliers/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewSupplier"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Supplier.Name" />
            <abp-input asp-for="Supplier.Phone" />
            <abp-input asp-for="Supplier.Address" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
